<div class="centered-wrapper">
<% if (user) { %>
    <h1 class="username"><%= user.username %>'s profile:</h1>
    <% if (userSystems) { %>
        <% let count = 1; %>
        <% userSystems.forEach((system) => { %>
            <div class="system" class="system-list-node">System <%= count %>:  
                <%= system.name %><br>
                <input class="profile-modify-button" data-index="<%=count%>" type="button" value="modify/display">
                <input class="profile-delete-button" data-index="<%=count%>" type="button" value="delete">
            </div>  
            <% count++ %>
        <% }); %>
    <% } %>
<% } else { %>
    <h1 class="profiletag">USER IS NOT LOGGED IN</h1>
<% } %>
</div>