<% if (user) { %>
    <h1 class="username"><%= user.username %>'s profile:</h1>
    <% if (userSystems) { %>
        <% let count = 1; %>
        <% userSystems.forEach((system) => { %>
            <div class="systemmm">System <%= count %>:  
                <%= system.name %><br>
                <input type="button" value="modify/display">
                <input type="button" value="delete">
            </div>
            <% count++ %>
        <% }); %>
    <% } %>
<% } else { %>
    <h1 class="profiletag">USER IS NOT LOGGED IN</h1>
<% } %>